<div class="card border-0 shadow-sm mb-4">
    <div class="position-relative">
        {# IMAGEN #}
        {# Usamos object-fit: cover para que llene el hueco sin deformarse #}
        <img src="{{ asset('images/blog/' ~ post.image) }}" 
             class="card-img-top" 
             alt="{{ post.title }}" 
             style="width: 100%; height: 250px; object-fit: cover;">
        
        {# ETIQUETA DE FECHA (El cuadro azul) #}
        <div class="bg-primary text-white position-absolute text-center py-2 px-3" style="top: 0; left: 0;">
            <span class="d-block font-weight-bold" style="font-size: 1.2rem; line-height: 1;">
                {{ post.publishedAt | date('d') }}
            </span>
            <small class="text-uppercase" style="font-size: 0.7rem;">
                {{ post.publishedAt | date('F') }}
            </small>
        </div>
    </div>

    <div class="card-body bg-white p-4">
        {# ICONOS DE LIKES Y COMENTARIOS #}
        <div class="mb-2 text-muted small">
            <span class="mr-3">
                <i class="ti-heart"></i> {{ post.numLikes }}
            </span>
            <span>
                <i class="ti-comment"></i> {{ post.numComments }}
            </span>
        </div>

        {# TÍTULO #}
        <h5 class="card-title mt-2 font-weight-bold">
            <a href="{{ path('single_post', {'id': post.id}) }}" class="text-dark text-decoration-none">
                {{ post.title }}
            </a>
        </h5>
        
        {# OPCIONAL: Un pequeño extracto del texto si quieres #}
        {# <p class="card-text text-muted">{{ post.content|slice(0, 50) }}...</p> #}
    </div>
</div>