<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with LeadMark landing page.">
    <meta name="author" content="Devcrud">
    <title>Registro</title>
    <!-- font icons -->
    <link rel="stylesheet" href="assets/vendors/themify-icons/css/themify-icons.css">
    <!-- Bootstrap + LeadMark main styles -->
    <link rel="stylesheet" href="assets/css/leadmark.css">
</head>
<body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">

    <div class="d-flex justify-content-center align-items-center vh-100 bg-light">
        <div class="card shadow-lg p-4 border-0 rounded-3" style="max-width: 420px; width: 100%;">
            <div class="text-center mb-4">
                <h2 class="fw-bold gradient-title">Crear cuenta</h2>
                <p class="text-muted">Regístrate para empezar</p>
            </div>

            {{ form_start(registrationForm) }}

            <div class="mb-3">
                {{ form_label(registrationForm.email, 'Correo electrónico', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class':'form-control', 'placeholder':'ejemplo@correo.com'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.name, 'Nombre de usuario', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                {{ form_widget(registrationForm.name, {'attr': {'class':'form-control', 'placeholder':'Tu nombre de usuario'}}) }}
                {{ form_errors(registrationForm.name) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword, 'Contraseña', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class':'form-control', 'placeholder':'********'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class':'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'Aceptar términos y condiciones', {'label_attr': {'class':'form-check-label'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm">Registrarse</button>

            {{ form_end(registrationForm) }}

            <div class="text-center mt-3">
                <small class="text-muted">¿Ya tienes cuenta? 
                    <a href="{{ path('app_login') }}" class="text-decoration-none fw-semibold">Inicia sesión</a>
                </small>
            </div>
        </div>
    </div>

    <!-- core  -->
    <script src="assets/vendors/jquery/jquery-3.4.1.js"></script>
    <script src="assets/vendors/bootstrap/bootstrap.bundle.js"></script>
    <script src="assets/vendors/bootstrap/bootstrap.affix.js"></script>
    <script src="assets/vendors/isotope/isotope.pkgd.js"></script>
    <script src="assets/js/leadmark.js"></script>

</body>
</html> 